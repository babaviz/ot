                   <li><a href="{{ path('user_profile_change_password', {'roles': roles[0],'redirect': 'dashboard'} ) }}"><i class="fa fa-key"></i> {% trans %}Change password{% endtrans %}</a></li> 
                  <li class="divider"></li>
                  <li><a href="{{ path('logout') }}"><i class="fa fa-power-off"></i> {% trans %}Logout{% endtrans %}</a></li>

{% extends "::two-col.html.twig" %}

{% block title %}{% trans %}Choose a Time{% endtrans %}{% endblock %}

{% block sidebar %}
{% include "OTBackendBundle:Learner:sidebar.html.twig" %}
{% endblock %}

{% block body %}
	<div class="panel panel-default">
	{#<div class="panel-heading">{% trans %}Dashboard{% endtrans %}</div>#}
	<div class="panel-body">

	<p class="lead">Choose your Teacher:</p>

	{{ form(form_teacher) }}

	<p class="lead">Choose a Time:</p>

	{% if message is defined %}
		{{ dump(message) }}
	{% endif %}

	

	<div class="panel panel-default">
        <div class="panel-body">

        <table class="table">
            <thead>
                <tr><td></td><td><strong>{% trans %}Weekday{% endtrans %}</strong></td>
                <td colspan=10><strong>{% trans %}Available Time{% endtrans %}</strong></td></tr>
            </thead>
            <tbody>
            <tr><td>ChooseThis!</td><td>{{ day[0] }} <small>{% trans %}Today{% endtrans %}</small></td>
                {% for agenda in entity[0] %}
                    <td>
                            {{ agenda }}
                    </td>
                {% endfor %}<td colspan=10></td>
            </tr>
            <tr><td>ChooseThis!</td><td>{{ day[1] }} <small>{% trans %}Tomorrow{% endtrans %}</small></td>
                {% for agenda in entity[1] %}
                    <td>
                            {{ agenda }}
                    </td>
                {% endfor %}<td colspan=10></td>
            </tr>
            <tr><td>ChooseThis!</td><td>{{ day[2] }}</td>
                {% for agenda in entity[2] %}
                    <td>
                            {{ agenda }}
                    </td>
                {% endfor %}<td colspan=10></td>
            </tr>
            <tr><td>ChooseThis!</td><td>{{ day[3] }}</td>
                {% for agenda in entity[3] %}
                    <td>
                            {{ agenda }}
                    </td>
                {% endfor %}<td colspan=10></td>
            </tr>
            <tr><td>ChooseThis!</td><td>{{ day[4] }}</td>
                {% for agenda in entity[4] %}
                    <td>
                            {{ agenda }}
                    </td>
                {% endfor %}<td colspan=10></td>
            </tr>
            <tr><td>ChooseThis!</td><td>{{ day[5] }}</td>
                {% for agenda in entity[5] %}
                    <td>
                            {{ agenda }}
                    </td>
                {% endfor %}<td colspan=10></td>
            </tr>
            <tr><td>ChooseThis!</td><td>{{ day[6] }}</td>
                {% for agenda in entity[6] %}
                    <td>
                            {{ agenda }}
                    </td>
                {% endfor %}<td colspan=10></td>
            </tr>
            </tbody>
        </table>

        </div>
        </div>

    </div>
	
	

	</div>
	</div>

<p class="help-block">{% trans %}If you have any questions, please contact school365.{% endtrans %}</p>

{% endblock %}

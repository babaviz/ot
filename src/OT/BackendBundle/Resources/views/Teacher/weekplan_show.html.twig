{% extends '::two-col.html.twig' %}


{% block title %}{% trans %}Show Weekly Plan{% endtrans %}{% endblock %}

{% block sidebar %}
{% include "OTBackendBundle:Teacher:sidebar.html.twig" %}
{% endblock %}


{% block body -%}
    <h1>Weekplan</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Weekday</th>
                <td>{{ entity.weekday }}</td>
            </tr>
            <tr>
                <th>Start_hour</th>
                <td>{{ entity.starthour }}</td>
            </tr>
            <tr>
                <th>Start_minute</th>
                <td>{{ entity.startminute }}</td>
            </tr>
            <tr>
                <th>End_hour</th>
                <td>{{ entity.endhour }}</td>
            </tr>
            <tr>
                <th>End_minute</th>
                <td>{{ entity.endminute }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('teacher_weekplan') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('teacher_weekplan_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}

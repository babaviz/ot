{% extends "::two-col.html.twig" %}

{% block title %}{% trans %}Account History{% endtrans %}{% endblock %}

{% block sidebar %}
	{% if role=='TEACHER' %}
		{% include "OTBackendBundle:Teacher:sidebar.html.twig" %}
	{% endif %}
	{% if role=='LEARNER' %}
		{% include "OTBackendBundle:Learner:sidebar.html.twig" %}
	{% endif %}
{% endblock %}

{% block body %}

	<div class="panel-body">
		<p class="lead">
			{% trans %}Account History{% endtrans %}

		</p>
		<table class="table table-striped table-hover table-condensed">
		<thead>
		<th>{% trans %}Transaction ID{% endtrans %}</th>
		<th>{% trans %}Title{% endtrans %}</th>
		<th>{% trans %}Type{% endtrans %}</th>
		<th>{% trans %}From{% endtrans %}</th>
		<th>{% trans %}To{% endtrans %}</th>
		<th>{% trans %}Amount{% endtrans %}</th>
		</thead>
		<tbody>
		{% for transaction in transactions %}
		<tr>
			<td>{{ transaction.TransactionId }}</td>
			<td>{{ transaction.Note }}</td>
			<td>{{ transaction.Type }}</td>
			<td>{{ transaction.From.name }}</td>
			<td>{{ transaction.To.name }}</td>

			<td>{{ transaction.Amount }}</td>
		</tr>
		{% endfor %}
		</tbody>
		</table>

	</div>

{% endblock %}


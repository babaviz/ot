{% extends "::two-col.html.twig" %}

{% block title %}{% trans %}Transaction Record{% endtrans %}{% endblock %}

{% block sidebar %}
{% include "OTBackendBundle:Admin:sidebar.html.twig" %}
{% endblock %}

{% block body %}

	<ul class="nav nav-tabs" role="tablist">
		  <li><a href="{{ path('admin_account_overview') }}">{% trans %}Account Overview{% endtrans %}</a></li>
		  <li class="active"><a href="#">{% trans %}Transaction Record{% endtrans %}</a></li>
		  <li><a href="{{ path('admin_account_transfer') }}">{% trans %}Transfer{% endtrans %}</a></li>
	</ul>

	<div class="panel-body">
		<p class="lead">
			{% trans %}Transaction Record{% endtrans %}
			<button class="btn btn-primary btn-sm pull-right"><i class="fa fa-dollar fa-fw"> </i> {% trans %}New Transaction{% endtrans %}</button>
		</p>
		<table class="table table-striped table-hover">
		<thead>
		<th>{% trans %}Transaction ID{% endtrans %}</th>
		<th>{% trans %}Title{% endtrans %}</th>
		<th>{% trans %}Type{% endtrans %}</th>
		<th>{% trans %}From{% endtrans %}</th>
		<th>{% trans %}To{% endtrans %}</th>
		<th>{% trans %}Amount{% endtrans %}</th>
		</thead>
		<tbody>
		{% for transaction in transactions %}
		<tr>
			<td>{{ transaction.TransactionId }}</td>
			<td>{{ transaction.Note }}</td>
			<td>{{ transaction.Type }}</td>
			<td>{{ transaction.From.name }}</td>
			<td>{{ transaction.To.name }}</td>
			
			<td>{{ transaction.Amount }}</td>
		</tr>
		{% endfor %}
		</tbody>
		</table>

		<hr />

		<p class="help-block"><span class="label label-info">{% trans %}Note{% endtrans %}</span></p>
		<ul>
			<p class="help-block">
			<tt>T <i class="fa fa-arrow-right"></i> </tt>: {% trans %}Transfer from a user to another user.{% endtrans %} <br />
			<tt>D <i class="fa fa-arrow-down"></i> </tt>: {% trans %}Deposit to a user's account.{% endtrans %} <br />
			<tt>W <i class="fa fa-arrow-up"></i> </tt>: {% trans %}Withdraw from a user's account.{% endtrans %} <br />
			<tt>S <i class="fa fa-money"></i> </tt>: {% trans %}Sales/Payment: directly deduct from a user's account.{% endtrans %}
			</p>
		</ul>

	</div>

{% endblock %}


{% extends "::two-col.html.twig" %}

{% block title %}{% trans %}Learner Mgt.{% endtrans %}{% endblock %}

{% block sidebar %}
{% include "OTBackendBundle:Admin:sidebar.html.twig" %}
{% endblock %}

{% block body %}

	<ul class="nav nav-tabs" role="tablist">
		  <li class="active"><a href="#">{% trans %}Learner List{% endtrans %}</a></li>
	</ul>



	<div class="panel-body">
		<p class="lead">
			{% trans %}Learner List{% endtrans %}
			<button class="btn btn-primary btn-sm pull-right"><i class="fa fa-plus fa-fw"> </i> {% trans %}New Learner{% endtrans %}</button>
		</p>
		<table class="table table-striped table-hover">
		<thead>
		<th>{% trans %}Learner ID{% endtrans %}</th>
		<th>{% trans %}Name{% endtrans %}</th>
		<th>{% trans %}Email{% endtrans %}</th>
		<th>{% trans %}Phone{% endtrans %}</th>
		<th>{% trans %}Introduction{% endtrans %}</th>
		<th>{% trans %}Account Balance{% endtrans %}</th>
		<th>{% trans %}Date Registered{% endtrans %}</th>
		<th></th>

		{% for learner in learners %}
		<tr>
			<td>{{ learner.ID }}</td>
			<td>{{ learner.Name }}</td>
			<td>{{ learner.Email }}</td>
			<td>{{ learner.Phone }}</td>
			<td>{{ learner.Introduction[:20] }}</td>
			<td>{{ learner.AccountBalance }}</td>
			<td>{{ learner.CreateTime|date('Y-m-d') }}</td>
			<td><div class="btn-toolbar"><a class="btn-sm btn-default"><i class="fa fa-edit"></i></a></div></td>

		</tr>
		{% endfor %}
		</thead>
		<tbody>
		</tbody>
		</table>
	</div>

{% endblock %}

